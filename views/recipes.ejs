<% include partials/header%>


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Recipe</h1>
			<p>View our user-created recipes from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/recipes/new">Add New Recipe</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% recipes.forEach(function(recipe){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%=recipe.image%>">
					<div class="caption">
						<h4><%= recipe.name %></h4>	
					</div>
				</div>	
			</div>
		<% }); %>	
	</div>
</div>
<% include partials/footer%>